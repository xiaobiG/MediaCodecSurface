<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_video_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_choose_video"
        app:layout_constraintEnd_toStartOf="@+id/btn_choose_video"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="video.mp4" />

    <Button
        android:id="@+id/btn_choose_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择视频"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choose_video" />


</androidx.constraintlayout.widget.ConstraintLayout>